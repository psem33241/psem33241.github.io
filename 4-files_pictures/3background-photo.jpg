<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <!-- Fond dégradé -->
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#ffe4e1;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f5f5dc;stop-opacity:1" />
    </linearGradient>
    
    <!-- Motif pour représenter l'industrie pétrolière -->
    <pattern id="petroleumPattern" x="0" y="0" width="60" height="60" patternUnits="userSpaceOnUse">
      <path d="M0 0 L30 30 L60 0" fill="none" stroke="#f8d7da" stroke-width="1" opacity="0.3"/>
    </pattern>
    
    <!-- Motif pour représenter l'analyse de données -->
    <pattern id="dataPattern" x="10" y="10" width="80" height="80" patternUnits="userSpaceOnUse">
      <circle cx="40" cy="40" r="2" fill="#ffdab9" opacity="0.4"/>
      <circle cx="0" cy="0" r="2" fill="#ffdab9" opacity="0.4"/>
      <circle cx="80" cy="80" r="2" fill="#ffdab9" opacity="0.4"/>
    </pattern>
  </defs>
  
  <!-- Fond principal -->
  <rect width="100%" height="100%" fill="url(#grad1)"/>
  
  <!-- Couche de motifs -->
  <rect width="100%" height="100%" fill="url(#petroleumPattern)"/>
  <rect width="100%" height="100%" fill="url(#dataPattern)"/>
  
  <!-- Éléments artistiques abstraits -->
  <path d="M0 300 Q 400 200 800 300" fill="none" stroke="#ffe4e1" stroke-width="2" opacity="0.5"/>
  <path d="M0 320 Q 400 220 800 320" fill="none" stroke="#ffdab9" stroke-width="2" opacity="0.4"/>
  <path d="M0 340 Q 400 240 800 340" fill="none" stroke="#fff0f5" stroke-width="2" opacity="0.3"/>
</svg>
